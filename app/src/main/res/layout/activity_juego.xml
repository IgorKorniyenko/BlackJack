<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mesa"
    tools:context=".Juego">

    <ImageView
        android:id="@+id/imageViewCarta1"
        android:layout_width="87dp"
        android:layout_height="130dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/carta_reverso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFichas" />

    <ImageView
        android:id="@+id/imageViewCarta2"
        android:layout_width="87dp"
        android:layout_height="130dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="143dp"
        android:background="@drawable/carta_reverso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFichas" />

    <ImageView
        android:id="@+id/imageViewCarta3"
        android:layout_width="87dp"
        android:layout_height="130dp"
        android:layout_marginEnd="143dp"
        android:background="@drawable/carta_reverso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewCarta4" />

    <ImageView
        android:id="@+id/imageViewFichas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cajafichas" />

    <ImageView
        android:id="@+id/imageViewCarta4"
        android:layout_width="87dp"
        android:layout_height="130dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/carta_reverso"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonPedir"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnApostar"
        android:layout_width="106dp"
        android:layout_height="53dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="@color/orange_700"
        android:text="@string/btnApostar"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageButton
        android:id="@+id/imageButtonPedir"
        android:layout_width="36dp"
        android:layout_height="41dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/pedir_otra"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnApostar"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/imageButtonPlantarse"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonPedir"
        app:layout_constraintStart_toEndOf="@+id/imageButtonPedir"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/imageButtonDoblar"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginStart="19dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/imageButtonPlantarse"
        app:layout_constraintTop_toTopOf="@+id/imageButtonPlantarse"
        app:srcCompat="@drawable/doblar_small" />

    <ImageButton
        android:id="@+id/imageButtonSeparar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/imageButtonDoblar"
        app:layout_constraintTop_toTopOf="@+id/imageButtonDoblar"
        app:srcCompat="@drawable/separar_small" />

    <TextView
        android:id="@+id/textViewApuesta"
        android:layout_width="117dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/sniglet"
        android:text="@string/tvApuesta"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewCarta3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFichas"
        app:layout_constraintVertical_bias="0.57" />

</androidx.constraintlayout.widget.ConstraintLayout>